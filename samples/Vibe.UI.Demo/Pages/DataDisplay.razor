@page "/data-display"

<PageTitle>Data Display Components - Vibe.UI Demo</PageTitle>

<div class="component-section">
    <h1>Data Display Components</h1>
    <p>Components for displaying and visualizing data.</p>

    <h2>Badge</h2>
    <div class="demo-container">
        <h3>Variants</h3>
        <div class="demo-grid">
            <Badge Variant="default">Default</Badge>
            <Badge Variant="primary">Primary</Badge>
            <Badge Variant="secondary">Secondary</Badge>
            <Badge Variant="success">Success</Badge>
            <Badge Variant="warning">Warning</Badge>
            <Badge Variant="error">Error</Badge>
            <Badge Variant="info">Info</Badge>
        </div>

        <h3>Sizes</h3>
        <div class="demo-grid">
            <Badge Size="small">Small</Badge>
            <Badge Size="medium">Medium</Badge>
            <Badge Size="large">Large</Badge>
        </div>
    </div>

    <h2>Avatar</h2>
    <div class="demo-container">
        <h3>Sizes</h3>
        <div class="demo-grid">
            <Avatar Size="small" Initials="JD" />
            <Avatar Size="medium" Initials="JD" />
            <Avatar Size="large" Initials="JD" />
        </div>

        <h3>With Images</h3>
        <div class="demo-grid">
            <Avatar Src="https://i.pravatar.cc/150?img=1" Alt="User 1" />
            <Avatar Src="https://i.pravatar.cc/150?img=2" Alt="User 2" />
            <Avatar Src="https://i.pravatar.cc/150?img=3" Alt="User 3" />
        </div>
    </div>

    <h2>Progress</h2>
    <div class="demo-container">
        <h3>Basic Progress</h3>
        <Progress Value="45" />

        <h3>Different Values</h3>
        <Progress Value="25" />
        <Progress Value="50" />
        <Progress Value="75" />
        <Progress Value="100" />

        <h3>Variants</h3>
        <Progress Value="60" Variant="primary" />
        <Progress Value="60" Variant="success" />
        <Progress Value="60" Variant="warning" />
        <Progress Value="60" Variant="error" />

        <h3>Indeterminate</h3>
        <Progress Indeterminate="true" />
    </div>

    <h2>Table</h2>
    <div class="demo-container">
        <h3>Basic Table</h3>
        <Table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in users)
                {
                    <tr>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                        <td>
                            <Badge Variant="@(user.Active ? "success" : "error")">
                                @(user.Active ? "Active" : "Inactive")
                            </Badge>
                        </td>
                    </tr>
                }
            </tbody>
        </Table>
    </div>

    <h2>DataTable</h2>
    <div class="demo-container">
        <h3>Advanced Data Table</h3>
        <DataTable TItem="User" Items="@users" Sortable="true" Filterable="true" PageSize="5">
            <TableHeader>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Status</th>
            </TableHeader>
            <RowTemplate>
                <td>@context.Name</td>
                <td>@context.Email</td>
                <td>@context.Role</td>
                <td>
                    <Badge Variant="@(context.Active ? "success" : "error")">
                        @(context.Active ? "Active" : "Inactive")
                    </Badge>
                </td>
            </RowTemplate>
        </DataTable>
    </div>

    <h2>Timeline</h2>
    <div class="demo-container">
        <h3>Event Timeline</h3>
        <Timeline>
            @foreach (var item in timelineItems)
            {
                <TimelineItem
                    Title="@item.Title"
                    Description="@item.Description"
                    Time="@item.Time"
                    Icon="@item.Icon" />
            }
        </Timeline>
    </div>

    <h2>Chart</h2>
    <div class="demo-container">
        <h3>Line Chart</h3>
        <Chart
            Type="line"
            Data="@lineChartData"
            Height="300" />

        <h3>Bar Chart</h3>
        <Chart
            Type="bar"
            Data="@barChartData"
            Height="300" />
    </div>

    <h2>Skeleton</h2>
    <div class="demo-container">
        <h3>Loading Skeletons</h3>
        <Skeleton Width="100%" Height="20px" />
        <Skeleton Width="80%" Height="20px" />
        <Skeleton Width="60%" Height="20px" />

        <h3>Card Skeleton</h3>
        <div style="display: flex; gap: 1rem;">
            <Skeleton Width="100px" Height="100px" Circle="true" />
            <div style="flex: 1;">
                <Skeleton Width="100%" Height="24px" />
                <Skeleton Width="80%" Height="20px" />
                <Skeleton Width="60%" Height="20px" />
            </div>
        </div>
    </div>
</div>

@code {
    private List<User> users = new()
    {
        new User { Name = "John Doe", Email = "john@example.com", Role = "Admin", Active = true },
        new User { Name = "Jane Smith", Email = "jane@example.com", Role = "User", Active = true },
        new User { Name = "Bob Johnson", Email = "bob@example.com", Role = "Editor", Active = false },
        new User { Name = "Alice Williams", Email = "alice@example.com", Role = "User", Active = true },
        new User { Name = "Charlie Brown", Email = "charlie@example.com", Role = "Viewer", Active = true },
    };

    private List<TimelineItem> timelineItems = new()
    {
        new TimelineItem { Title = "Project Created", Description = "Initial project setup", Time = "2 hours ago", Icon = "package" },
        new TimelineItem { Title = "First Commit", Description = "Added base components", Time = "1 hour ago", Icon = "save" },
        new TimelineItem { Title = "Tests Added", Description = "Comprehensive test coverage", Time = "30 minutes ago", Icon = "check" },
        new TimelineItem { Title = "Deployed", Description = "Deployed to production", Time = "Just now", Icon = "rocket" },
    };

    private object lineChartData = new
    {
        labels = new[] { "Jan", "Feb", "Mar", "Apr", "May", "Jun" },
        datasets = new[]
        {
            new { label = "Sales", data = new[] { 65, 59, 80, 81, 56, 55 } }
        }
    };

    private object barChartData = new
    {
        labels = new[] { "Red", "Blue", "Yellow", "Green", "Purple", "Orange" },
        datasets = new[]
        {
            new { label = "Votes", data = new[] { 12, 19, 3, 5, 2, 3 } }
        }
    };

    public class User
    {
        public string Name { get; set; } = "";
        public string Email { get; set; } = "";
        public string Role { get; set; } = "";
        public bool Active { get; set; }
    }

    public class TimelineItem
    {
        public string Title { get; set; } = "";
        public string Description { get; set; } = "";
        public string Time { get; set; } = "";
        public string Icon { get; set; } = "";
    }
}
