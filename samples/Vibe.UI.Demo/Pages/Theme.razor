@page "/theme"

<PageTitle>Theming - Vibe.UI Demo</PageTitle>

<div class="component-section">
    <h1>Theming</h1>
    <p>Customize the look and feel of your application with themes.</p>

    <h2>Theme Toggle</h2>
    <div class="demo-container">
        <h3>Dark Mode Toggle</h3>
        <ThemeToggle />
        <p>Toggle between light and dark themes using the button above.</p>
    </div>

    <h2>Theme Customization</h2>
    <div class="demo-container">
        <h3>Custom Theme Colors</h3>
        <Card>
            <h4>Primary Color</h4>
            <ColorPicker Label="Primary Color" @bind-Value="primaryColor" />

            <h4 style="margin-top: 1rem;">Secondary Color</h4>
            <ColorPicker Label="Secondary Color" @bind-Value="secondaryColor" />

            <h4 style="margin-top: 1rem;">Accent Color</h4>
            <ColorPicker Label="Accent Color" @bind-Value="accentColor" />

            <div style="margin-top: 2rem;">
                <Button Variant="primary" @onclick="ApplyCustomTheme">Apply Theme</Button>
                <Button Variant="outline" @onclick="ResetTheme">Reset to Default</Button>
            </div>
        </Card>
    </div>

    <h2>CSS Variables</h2>
    <div class="demo-container">
        <h3>Available CSS Variables</h3>
        <div class="code-block">
--vibe-primary: #3b82f6;
--vibe-secondary: #8b5cf6;
--vibe-success: #10b981;
--vibe-warning: #f59e0b;
--vibe-error: #ef4444;
--vibe-info: #3b82f6;

--vibe-background: #ffffff;
--vibe-surface: #f9fafb;
--vibe-text: #111827;
--vibe-text-secondary: #6b7280;
--vibe-border: #e5e7eb;

--vibe-radius: 0.375rem;
--vibe-spacing: 1rem;
--vibe-font-size: 1rem;
        </div>
    </div>

    <h2>Color Palette</h2>
    <div class="demo-container">
        <h3>Current Theme Colors</h3>
        <div class="color-grid">
            <div class="color-swatch" style="background: var(--vibe-primary);">
                <span class="color-label">Primary</span>
            </div>
            <div class="color-swatch" style="background: var(--vibe-secondary);">
                <span class="color-label">Secondary</span>
            </div>
            <div class="color-swatch" style="background: var(--vibe-success);">
                <span class="color-label">Success</span>
            </div>
            <div class="color-swatch" style="background: var(--vibe-warning);">
                <span class="color-label">Warning</span>
            </div>
            <div class="color-swatch" style="background: var(--vibe-error);">
                <span class="color-label">Error</span>
            </div>
            <div class="color-swatch" style="background: var(--vibe-info);">
                <span class="color-label">Info</span>
            </div>
        </div>
    </div>

    <h2>Component Examples</h2>
    <div class="demo-container">
        <h3>See Theme in Action</h3>
        <p>All components automatically adapt to the current theme:</p>

        <div class="demo-grid">
            <Button Variant="Button.ButtonVariant.Primary">Primary Button</Button>
            <Button Variant="Button.ButtonVariant.Secondary">Secondary Button</Button>
            <Button Variant="Button.ButtonVariant.Outline">Outline Button</Button>
        </div>

        <Card style="margin-top: 1rem;">
            <h4>Themed Card</h4>
            <p>This card uses theme colors for background, border, and text.</p>
            <Badge>Themed Badge</Badge>
        </Card>

        <Alert Variant="Alert.AlertVariant.Info" style="margin-top: 1rem;">
            All components respect the current theme settings.
        </Alert>
    </div>

</div>

@code {
    private string primaryColor = "#3b82f6";
    private string secondaryColor = "#8b5cf6";
    private string accentColor = "#10b981";

    private void ApplyCustomTheme()
    {
        // Apply custom theme settings using CSS variables
    }

    private void ResetTheme()
    {
        primaryColor = "#3b82f6";
        secondaryColor = "#8b5cf6";
        accentColor = "#10b981";
    }
}

<style>
    .color-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 1rem;
    }

    .color-swatch {
        height: 100px;
        border-radius: 0.5rem;
        display: flex;
        align-items: flex-end;
        padding: 1rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .color-label {
        color: white;
        font-weight: 600;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
    }
</style>
