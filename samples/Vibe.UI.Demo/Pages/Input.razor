@page "/input"

<PageTitle>Input Components - Vibe.UI Demo</PageTitle>

<div class="component-section">
    <h1>Input Components</h1>
    <p>Interactive input controls for user interaction and data entry.</p>

    <h2>Button</h2>
    <div class="demo-container">
        <h3>Variants</h3>
        <div class="demo-grid">
            <Button>Primary</Button>
            <Button>Secondary</Button>
            <Button>Outline</Button>
            <Button>Ghost</Button>
            <Button>Destructive</Button>
        </div>

        <h3>Sizes</h3>
        <div class="demo-grid">
            <Button>Small</Button>
            <Button>Medium</Button>
            <Button>Large</Button>
        </div>

        <h3>States</h3>
        <div class="demo-grid">
            <Button Disabled="true">Disabled</Button>
            <Button Loading="true">Loading</Button>
        </div>
    </div>

    <h2>Input</h2>
    <div class="demo-container">
        <h3>Basic Input</h3>
        <Input Label="Username" Placeholder="Enter your username" />

        <h3>With Helper Text</h3>
        <Input
            Label="Email"
            Type="email"
            Placeholder="you@example.com"
            HelperText="We'll never share your email." />

        <h3>With Error</h3>
        <Input
            Label="Password"
            Type="password"
            ErrorMessage="Password must be at least 8 characters" />

        <h3>With Icons</h3>
        <Input
            Label="Search"
            Placeholder="Search..."
            LeadingIcon="search" />
    </div>

    <h2>Checkbox</h2>
    <div class="demo-container">
        <h3>Basic Checkbox</h3>
        <Checkbox Label="Accept terms and conditions" />

        <h3>Checked by Default</h3>
        <Checkbox Label="Subscribe to newsletter" Checked="true" />

        <h3>Disabled</h3>
        <Checkbox Label="Disabled option" Disabled="true" />
    </div>

    <h2>Radio</h2>
    <div class="demo-container">
        <h3>Radio Group</h3>
        <RadioGroup @bind-Value="selectedOption">
            <RadioGroupItem Value="option1" Label="Option 1" />
            <RadioGroupItem Value="option2" Label="Option 2" />
            <RadioGroupItem Value="option3" Label="Option 3" />
        </RadioGroup>
        <p>Selected: @selectedOption</p>
    </div>

    <h2>Select</h2>
    <div class="demo-container">
        <h3>Basic Select</h3>
        <Select Label="Choose a country" Placeholder="Select...">
            <option value="us">United States</option>
            <option value="ca">Canada</option>
            <option value="uk">United Kingdom</option>
            <option value="de">Germany</option>
        </Select>

        <h3>With Helper Text</h3>
        <Select
            Label="Favorite Color"
            HelperText="Pick your favorite color">
            <option value="red">Red</option>
            <option value="blue">Blue</option>
            <option value="green">Green</option>
        </Select>
    </div>

    <h2>TextArea</h2>
    <div class="demo-container">
        <h3>Basic TextArea</h3>
        <TextArea
            Label="Message"
            Placeholder="Enter your message..."
            Rows="4" />

        <h3>With Character Count</h3>
        <TextArea
            Label="Bio"
            Placeholder="Tell us about yourself"
            HelperText="Maximum 500 characters"
            Rows="6" />
    </div>

    <h2>Slider</h2>
    <div class="demo-container">
        <h3>Basic Slider</h3>
        <Slider @bind-Value="sliderValue" Min="0" Max="100" />
        <p>Value: @sliderValue</p>

        <h3>With Step</h3>
        <Slider @bind-Value="stepValue" Min="0" Max="100" Step="10" />
        <p>Value: @stepValue</p>
    </div>

    <h2>Switch</h2>
    <div class="demo-container">
        <h3>Basic Switch</h3>
        <Switch Label="Enable notifications" @bind-Checked="switchChecked" />
        <p>State: @(switchChecked ? "On" : "Off")</p>

        <h3>Disabled</h3>
        <Switch Label="Disabled switch" Disabled="true" />
    </div>

    <h2>Rating</h2>
    <div class="demo-container">
        <h3>Star Rating</h3>
        <Rating Value="@ratingValue" ValueChanged="@((int val) => ratingValue = val)" Max="5" />
        <p>Rating: @ratingValue / 5</p>

        <h3>Read Only</h3>
        <Rating Value="4" Max="5" ReadOnly="true" />
    </div>

    <h2>ColorPicker</h2>
    <div class="demo-container">
        <h3>Basic Color Picker</h3>
        <ColorPicker Label="Choose a color" @bind-Value="colorValue" />
        <p>Selected: @colorValue</p>
    </div>

    <h2>FileUpload</h2>
    <div class="demo-container">
        <h3>File Upload</h3>
        <FileUpload
            Label="Upload file"
            Accept=".pdf,.doc,.docx"
            HelperText="PDF or Word documents only" />

        <h3>Multiple Files</h3>
        <FileUpload
            Label="Upload images"
            Accept="image/*"
            Multiple="true" />
    </div>

    <h2>Toggle</h2>
    <div class="demo-container">
        <h3>Basic Toggle</h3>
        <Toggle @bind-Pressed="togglePressed">
            Toggle Me
        </Toggle>
        <p>State: @(togglePressed ? "Pressed" : "Not Pressed")</p>
    </div>

    <h2>MultiSelect</h2>
    <div class="demo-container">
        <h3>Multi-Select Dropdown</h3>
        <MultiSelect
            Label="Select technologies"
            Placeholder="Choose technologies..."
            Items="@technologies"
            @bind-SelectedItems="selectedTechnologies" />
        <p>Selected: @string.Join(", ", selectedTechnologies)</p>
    </div>

    <h2>TagInput</h2>
    <div class="demo-container">
        <h3>Tag Input</h3>
        <TagInput
            Label="Add tags"
            Placeholder="Type and press Enter..."
            @bind-Tags="tags" />
        <p>Tags: @string.Join(", ", tags)</p>
    </div>
</div>

@code {
    private string selectedOption = "option1";
    private int sliderValue = 50;
    private int stepValue = 50;
    private bool switchChecked = true;
    private int ratingValue = 3;
    private string colorValue = "#3b82f6";
    private bool togglePressed = false;

    private List<string> technologies = new()
    {
        "C#", "Blazor", "ASP.NET", "JavaScript", "TypeScript", "React", "Vue", "Angular"
    };
    private List<string> selectedTechnologies = new() { "C#", "Blazor" };
    private List<string> tags = new() { "blazor", "components", "ui" };
}
