@page "/components/skeleton"

<PageTitle>Skeleton - Vibe.UI</PageTitle>

<ComponentPage ComponentName="Skeleton"
               Category="Feedback"
               Description="A placeholder component that displays a loading state while content is being fetched."
               RelatedComponents="@relatedComponents">

    <PreviewContent>
        <div class="preview-demo">
            <p>Component preview will be shown here when installed.</p>
        </div>
    </PreviewContent>

    <Examples>
        <div class="example-item">
            <h3>Basic Skeleton</h3>
            <CodeBlock Code="@BasicCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>Skeleton Variants</h3>
            <CodeBlock Code="@VariantsCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>Skeleton Shapes</h3>
            <CodeBlock Code="@ShapesCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>Card Skeleton</h3>
            <CodeBlock Code="@CardCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>List Skeleton</h3>
            <CodeBlock Code="@ListCode" Language="razor" />
        </div>
    </Examples>

    <Props>
        <table class="api-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Default</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><code>Width</code></td>
                    <td>string</td>
                    <td>"100%"</td>
                    <td>Width of the skeleton (CSS value)</td>
                </tr>
                <tr>
                    <td><code>Height</code></td>
                    <td>string</td>
                    <td>"20px"</td>
                    <td>Height of the skeleton (CSS value)</td>
                </tr>
                <tr>
                    <td><code>Shape</code></td>
                    <td>SkeletonShape</td>
                    <td>Rectangle</td>
                    <td>Shape of the skeleton (Rectangle, Circle, Rounded)</td>
                </tr>
                <tr>
                    <td><code>Variant</code></td>
                    <td>SkeletonVariant</td>
                    <td>Pulse</td>
                    <td>Animation variant (Pulse, Wave, None)</td>
                </tr>
                <tr>
                    <td><code>Count</code></td>
                    <td>int</td>
                    <td>1</td>
                    <td>Number of skeleton lines to render</td>
                </tr>
                <tr>
                    <td><code>ChildContent</code></td>
                    <td>RenderFragment</td>
                    <td>-</td>
                    <td>Optional custom skeleton content</td>
                </tr>
            </tbody>
        </table>
    </Props>

    <Events>
        <table class="api-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td colspan="3">No events available for this component</td>
                </tr>
            </tbody>
        </table>
    </Events>

    <AccessibilityNotes>
        <ul>
            <li>Uses <code>aria-busy="true"</code> to indicate loading state</li>
            <li>Includes <code>aria-label</code> to describe loading content</li>
            <li>Does not receive keyboard focus</li>
            <li>Screen readers announce loading state</li>
            <li>Respects <code>prefers-reduced-motion</code> for animations</li>
        </ul>
    </AccessibilityNotes>
</ComponentPage>

@code {
    private List<string> relatedComponents = new() { "Spinner", "ProgressBar" };

    private string BasicCode => @"<Skeleton Width=""200px"" Height=""20px"" />
<Skeleton Width=""100%"" Height=""40px"" />
<Skeleton Width=""300px"" Height=""16px"" />";

    private string VariantsCode => @"<Skeleton Variant=""SkeletonVariant.Pulse"" Width=""200px"" />
<Skeleton Variant=""SkeletonVariant.Wave"" Width=""200px"" />
<Skeleton Variant=""SkeletonVariant.None"" Width=""200px"" />";

    private string ShapesCode => @"<Skeleton Shape=""SkeletonShape.Circle"" Width=""60px"" Height=""60px"" />
<Skeleton Shape=""SkeletonShape.Rounded"" Width=""100px"" Height=""100px"" />
<Skeleton Shape=""SkeletonShape.Rectangle"" Width=""200px"" Height=""50px"" />";

    private string CardCode => @"<div class=""card"">
    <Skeleton Shape=""SkeletonShape.Rectangle"" Width=""100%"" Height=""200px"" />
    <div class=""card-body"">
        <Skeleton Width=""60%"" Height=""24px"" />
        <Skeleton Width=""100%"" Height=""16px"" Count=""3"" />
    </div>
</div>";

    private string ListCode => @"@foreach (var item in Enumerable.Range(1, 5))
{
    <div class=""list-item"">
        <Skeleton Shape=""SkeletonShape.Circle"" Width=""40px"" Height=""40px"" />
        <div class=""list-content"">
            <Skeleton Width=""70%"" Height=""20px"" />
            <Skeleton Width=""90%"" Height=""14px"" />
        </div>
    </div>
}";
}
