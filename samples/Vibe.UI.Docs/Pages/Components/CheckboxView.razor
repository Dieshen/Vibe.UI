@page "/components/checkbox"
@using Vibe.UI.Components

<PageTitle>Checkbox - Vibe.UI</PageTitle>

<ComponentPage ComponentName="Checkbox"
               Category="Input"
               Description="A control that allows the user to toggle between checked and not checked states."
               RelatedComponents="@relatedComponents">

    <PreviewContent>
        <div class="preview-demo" style="display: flex; flex-direction: column; gap: 1rem;">
            <Checkbox>Default checkbox</Checkbox>

            <Checkbox Checked="true">Checked checkbox</Checkbox>

            <Checkbox>Accept terms and conditions</Checkbox>

            <Checkbox Checked="@isSubscribed" CheckedChanged="@OnSubscribeChanged">Subscribe to newsletter</Checkbox>
            @if (isSubscribed)
            {
                <p style="margin-left: 1.5rem; color: var(--brand-teal);">âœ“ Subscribed!</p>
            }

            <Checkbox Disabled="true">Disabled unchecked</Checkbox>

            <Checkbox Checked="true" Disabled="true">Disabled checked</Checkbox>
        </div>
    </PreviewContent>

    <Examples>
        <div class="example-item">
            <h3>Basic Usage</h3>
            <CodeBlock Code="@BasicCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>With Label</h3>
            <CodeBlock Code="@LabelCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>Disabled State</h3>
            <CodeBlock Code="@DisabledCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>Indeterminate State</h3>
            <CodeBlock Code="@IndeterminateCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>With Change Handler</h3>
            <CodeBlock Code="@ChangeHandlerCode" Language="razor" />
        </div>
    </Examples>

    <Props>
        <table class="api-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Default</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><code>Checked</code></td>
                    <td>bool</td>
                    <td>false</td>
                    <td>Whether the checkbox is checked</td>
                </tr>
                <tr>
                    <td><code>Indeterminate</code></td>
                    <td>bool</td>
                    <td>false</td>
                    <td>Whether the checkbox is in indeterminate state</td>
                </tr>
                <tr>
                    <td><code>Disabled</code></td>
                    <td>bool</td>
                    <td>false</td>
                    <td>Whether the checkbox is disabled</td>
                </tr>
                <tr>
                    <td><code>Label</code></td>
                    <td>string</td>
                    <td>null</td>
                    <td>Label text for the checkbox</td>
                </tr>
                <tr>
                    <td><code>Value</code></td>
                    <td>string</td>
                    <td>null</td>
                    <td>The value attribute of the checkbox</td>
                </tr>
                <tr>
                    <td><code>Name</code></td>
                    <td>string</td>
                    <td>null</td>
                    <td>The name attribute of the checkbox</td>
                </tr>
            </tbody>
        </table>
    </Props>

    <Events>
        <table class="api-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><code>CheckedChanged</code></td>
                    <td>EventCallback&lt;bool&gt;</td>
                    <td>Callback when checked state changes</td>
                </tr>
                <tr>
                    <td><code>OnChange</code></td>
                    <td>EventCallback&lt;ChangeEventArgs&gt;</td>
                    <td>Native change event callback</td>
                </tr>
            </tbody>
        </table>
    </Events>

    <AccessibilityNotes>
        <ul>
            <li>Uses semantic <code>&lt;input type="checkbox"&gt;</code> element</li>
            <li>Proper ARIA attributes for indeterminate state</li>
            <li>Label associated with input for clickable area</li>
            <li>Keyboard accessible (Space to toggle)</li>
            <li>Focus visible styles for keyboard navigation</li>
        </ul>
    </AccessibilityNotes>
</ComponentPage>

@code {
    private bool isSubscribed = false;
    private List<string> relatedComponents = new() { "RadioGroup", "Switch", "Form" };

    private void OnSubscribeChanged(bool value)
    {
        isSubscribed = value;
    }

    private string BasicCode => @"<Checkbox />
<Checkbox Checked=""true"" />";

    private string LabelCode => @"<Checkbox Label=""Accept terms and conditions"" />
<Checkbox Label=""Subscribe to newsletter"" Checked=""true"" />";

    private string DisabledCode => @"<Checkbox Label=""Disabled unchecked"" Disabled=""true"" />
<Checkbox Label=""Disabled checked"" Checked=""true"" Disabled=""true"" />";

    private string IndeterminateCode => @"<Checkbox Label=""Select all"" Indeterminate=""true"" />
<Checkbox Label=""Some items selected"" Indeterminate=""true"" />";

    private string ChangeHandlerCode => @"<Checkbox Label=""Agree to terms"" @bind-Checked=""@agreed"" />
<p>Agreed: @agreed</p>

@code {
    private bool agreed = false;
}";
}
