@page "/components/divider"
@using Vibe.UI.Components

<PageTitle>Divider - Vibe.UI</PageTitle>
<ComponentPage ComponentName="Divider"
               Category="Layout"
               Description="A visual separator for content sections, supporting horizontal and vertical orientations with optional labels."
               RelatedComponents="@relatedComponents">

    <PreviewContent>
        <div class="preview-demo" style="max-width: 600px; margin: 0 auto;">
            <p>Content above the divider</p>
            <Divider />
            <p>Content below the divider</p>
        </div>
    </PreviewContent>

    <Examples>
        <div class="example-item">
            <h3>Horizontal Divider</h3>
            <p>Basic horizontal separator:</p>
            <CodeBlock Code="@HorizontalCode" Language="razor" />

            <div style="margin-top: 1rem;">
                <p style="margin-bottom: 0;">Section 1 content</p>
                <Divider />
                <p style="margin-top: 0;">Section 2 content</p>
            </div>
        </div>

        <div class="example-item">
            <h3>Divider with Label</h3>
            <p>Add labels to provide context:</p>
            <CodeBlock Code="@LabelCode" Language="razor" />

            <div style="margin-top: 1rem;">
                <p>Sign in with your account</p>
                <Divider Label="OR" />
                <p>Continue as guest</p>
            </div>
        </div>

        <div class="example-item">
            <h3>Vertical Divider</h3>
            <p>Separate inline content vertically:</p>
            <CodeBlock Code="@VerticalCode" Language="razor" />

            <div style="margin-top: 1rem; display: flex; align-items: center; gap: 1rem;">
            </div>
        </div>
    </Examples>

    <Props>
        <table class="api-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Default</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><code>Orientation</code></td>
                    <td>DividerOrientation</td>
                    <td>Horizontal</td>
                    <td>Divider orientation</td>
                </tr>
                <tr>
                    <td><code>Label</code></td>
                    <td>string?</td>
                    <td>null</td>
                    <td>Label text to display in divider</td>
                </tr>
                <tr>
                    <td><code>LabelPosition</code></td>
                    <td>DividerLabelPosition</td>
                    <td>Center</td>
                    <td>Label position (Left, Center, Right)</td>
                </tr>
                <tr>
                    <td><code>LineStyle</code></td>
                    <td>DividerLineStyle</td>
                    <td>Solid</td>
                    <td>Line style (Solid, Dashed, Dotted)</td>
                </tr>
                <tr>
                    <td><code>Thickness</code></td>
                    <td>int</td>
                    <td>1</td>
                    <td>Line thickness in pixels</td>
                </tr>
            </tbody>
        </table>
    </Props>

    <AccessibilityNotes>
        <ul>
            <li>Uses semantic <code>&lt;hr&gt;</code> element for horizontal dividers</li>
            <li>Has proper <code>role="separator"</code> for screen readers</li>
            <li>Does not interfere with content flow or navigation</li>
        </ul>
    </AccessibilityNotes>
</ComponentPage>


@code {
    private List<string> relatedComponents = new() { "Separator", "Stack", "Card" };

    private string HorizontalCode => @"<p>Content above</p>
<Divider />
<p>Content below</p>";

    private string LabelCode => @"<p>Section 1</p>
<Divider Label=""OR"" />
<p>Section 2</p>";

    private string VerticalCode => @"<div style=""display: flex; align-items: center; gap: 1rem;"">
    <span>Item 1</span>
    <Divider Orientation=""Divider.DividerOrientation.Vertical"" style=""height: 40px;"" />
    <span>Item 2</span>
</div>";
}
