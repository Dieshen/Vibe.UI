@page "/components/breadcrumb"
@using Vibe.UI.Components

<PageTitle>Breadcrumb - Vibe.UI</PageTitle>

<ComponentPage ComponentName="Breadcrumb"
               Category="Navigation"
               Description="Displays the current location within a navigational hierarchy."
               RelatedComponents="@relatedComponents">

    <PreviewContent>
        <div class="preview-demo">
            <h4>Basic Breadcrumb</h4>
            <div style="padding: 1rem; background: var(--surface-1, #f8f9fa); border-radius: 8px;">
                <Breadcrumb Separator="/">
                    <BreadcrumbItem Href="/">Home</BreadcrumbItem>
                    <BreadcrumbItem Href="/products">Products</BreadcrumbItem>
                    <BreadcrumbItem Href="/products/electronics">Electronics</BreadcrumbItem>
                    <BreadcrumbItem IsLast="true">Laptops</BreadcrumbItem>
                </Breadcrumb>
            </div>

            <h4 style="margin-top: 1.5rem;">Custom Separator</h4>
            <div style="padding: 1rem; background: var(--surface-1, #f8f9fa); border-radius: 8px;">
                <Breadcrumb Separator=">">
                    <BreadcrumbItem Href="/">Home</BreadcrumbItem>
                    <BreadcrumbItem Href="/docs">Documentation</BreadcrumbItem>
                    <BreadcrumbItem IsLast="true">Components</BreadcrumbItem>
                </Breadcrumb>
            </div>

            <h4 style="margin-top: 1.5rem;">With Custom Separator Content</h4>
            <div style="padding: 1rem; background: var(--surface-1, #f8f9fa); border-radius: 8px;">
                <Breadcrumb>
                    <BreadcrumbItem Href="/">
                        <ChildContent>Home</ChildContent>
                        <SeparatorContent>
                            <span style="margin: 0 0.5rem; color: #999;">â†’</span>
                        </SeparatorContent>
                    </BreadcrumbItem>
                    <BreadcrumbItem Href="/settings">
                        <ChildContent>Settings</ChildContent>
                        <SeparatorContent>
                            <span style="margin: 0 0.5rem; color: #999;">â†’</span>
                        </SeparatorContent>
                    </BreadcrumbItem>
                    <BreadcrumbItem IsLast="true">Profile</BreadcrumbItem>
                </Breadcrumb>
            </div>
        </div>
    </PreviewContent>

    <Examples>
        <div class="example-item">
            <h3>Basic Usage</h3>
            <CodeBlock Code="@BasicCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>With Icons</h3>
            <CodeBlock Code="@IconsCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>Custom Separator</h3>
            <CodeBlock Code="@SeparatorCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>Collapsed Items</h3>
            <CodeBlock Code="@CollapsedCode" Language="razor" />
        </div>
    </Examples>

    <Props>
        <table class="api-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Default</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><code>Items</code></td>
                    <td>List&lt;BreadcrumbItem&gt;</td>
                    <td>null</td>
                    <td>Breadcrumb items to display</td>
                </tr>
                <tr>
                    <td><code>Separator</code></td>
                    <td>string</td>
                    <td>"/"</td>
                    <td>Separator between items</td>
                </tr>
                <tr>
                    <td><code>MaxItems</code></td>
                    <td>int?</td>
                    <td>null</td>
                    <td>Maximum items before collapsing</td>
                </tr>
            </tbody>
        </table>
    </Props>

    <Events>
        <table class="api-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><code>OnItemClick</code></td>
                    <td>EventCallback&lt;BreadcrumbItem&gt;</td>
                    <td>Callback when item is clicked</td>
                </tr>
            </tbody>
        </table>
    </Events>

    <AccessibilityNotes>
        <ul>
            <li>Uses semantic <code>&lt;nav&gt;</code> with aria-label="breadcrumb"</li>
            <li>Current page marked with aria-current="page"</li>
            <li>Keyboard accessible navigation</li>
            <li>Screen reader friendly separators</li>
        </ul>
    </AccessibilityNotes>
</ComponentPage>

