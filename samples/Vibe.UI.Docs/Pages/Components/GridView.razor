@page "/components/grid"
@using Vibe.UI.Components

<PageTitle>Grid - Vibe.UI</PageTitle>

<ComponentPage ComponentName="Grid"
               Category="Layout"
               Description="A responsive grid layout system based on CSS Grid for arranging content in rows and columns."
               RelatedComponents="@relatedComponents">

    <PreviewContent>
        <div class="preview-demo" style="max-width: 800px; margin: 0 auto;">
            <Grid Columns="3" Gap="1rem">
                <GridItem>
                    <Card>
                        <div style="padding: 2rem; text-align: center; background: var(--vibe-muted); border-radius: var(--vibe-radius);">
                            Item 1
                        </div>
                    </Card>
                </GridItem>
                <GridItem>
                    <Card>
                        <div style="padding: 2rem; text-align: center; background: var(--vibe-muted); border-radius: var(--vibe-radius);">
                            Item 2
                        </div>
                    </Card>
                </GridItem>
                <GridItem>
                    <Card>
                        <div style="padding: 2rem; text-align: center; background: var(--vibe-muted); border-radius: var(--vibe-radius);">
                            Item 3
                        </div>
                    </Card>
                </GridItem>
                <GridItem ColSpan="2">
                    <Card>
                        <div style="padding: 2rem; text-align: center; background: var(--vibe-primary); color: var(--vibe-primary-foreground); border-radius: var(--vibe-radius);">
                            Spans 2 Columns
                        </div>
                    </Card>
                </GridItem>
                <GridItem>
                    <Card>
                        <div style="padding: 2rem; text-align: center; background: var(--vibe-muted); border-radius: var(--vibe-radius);">
                            Item 4
                        </div>
                    </Card>
                </GridItem>
            </Grid>
        </div>
    </PreviewContent>

    <Examples>
        <div class="example-item">
            <h3>Basic Grid</h3>
            <p>Create a simple 3-column grid layout:</p>
            <CodeBlock Code="@BasicCode" Language="razor" />

            <div style="margin-top: 1rem;">
                <Grid Columns="3" Gap="1rem">
                    @for (int i = 1; i <= 6; i++)
                    {
                        var index = i;
                        <GridItem>
                            <div style="padding: 1.5rem; text-align: center; background: var(--vibe-muted); border-radius: var(--vibe-radius);">
                                Item @index
                            </div>
                        </GridItem>
                    }
                </Grid>
            </div>
        </div>

        <div class="example-item">
            <h3>Column Spans</h3>
            <p>Use ColSpan to make items span multiple columns:</p>
            <CodeBlock Code="@SpansCode" Language="razor" />

            <div style="margin-top: 1rem;">
                <Grid Columns="12" Gap="1rem">
                    <GridItem ColSpan="12">
                        <div style="padding: 1rem; background: var(--vibe-primary); color: var(--vibe-primary-foreground); border-radius: var(--vibe-radius); text-align: center;">
                            Full Width (12 columns)
                        </div>
                    </GridItem>
                    <GridItem ColSpan="8">
                        <div style="padding: 1rem; background: var(--vibe-accent); color: var(--vibe-accent-foreground); border-radius: var(--vibe-radius); text-align: center;">
                            Main (8 columns)
                        </div>
                    </GridItem>
                    <GridItem ColSpan="4">
                        <div style="padding: 1rem; background: var(--vibe-muted); border-radius: var(--vibe-radius); text-align: center;">
                            Sidebar (4 columns)
                        </div>
                    </GridItem>
                </Grid>
            </div>
        </div>

        <div class="example-item">
            <h3>Auto-fit Responsive Grid</h3>
            <p>Use AutoFit for automatically responsive columns:</p>
            <CodeBlock Code="@AutoFitCode" Language="razor" />

            <div style="margin-top: 1rem;">
                <Grid AutoFit="true" MinColumnWidth="200px" Gap="1rem">
                    @for (int i = 1; i <= 6; i++)
                    {
                        var index = i;
                        <GridItem>
                            <div style="padding: 1.5rem; text-align: center; background: var(--vibe-muted); border-radius: var(--vibe-radius);">
                                Auto Item @index
                            </div>
                        </GridItem>
                    }
                </Grid>
            </div>
        </div>

        <div class="example-item">
            <h3>Custom Gap Control</h3>
            <p>Control row and column gaps independently:</p>
            <CodeBlock Code="@GapCode" Language="razor" />

            <div style="margin-top: 1rem;">
                <Grid Columns="3" RowGap="2rem" ColumnGap="0.5rem">
                    @for (int i = 1; i <= 6; i++)
                    {
                        var index = i;
                        <GridItem>
                            <div style="padding: 1rem; text-align: center; background: var(--vibe-muted); border-radius: var(--vibe-radius);">
                                @index
                            </div>
                        </GridItem>
                    }
                </Grid>
            </div>
        </div>
    </Examples>

    <Props>
        <table class="api-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Default</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><code>Columns</code></td>
                    <td>int</td>
                    <td>12</td>
                    <td>Number of columns in the grid</td>
                </tr>
                <tr>
                    <td><code>Gap</code></td>
                    <td>string</td>
                    <td>"1rem"</td>
                    <td>Gap between grid items (applies to both rows and columns)</td>
                </tr>
                <tr>
                    <td><code>RowGap</code></td>
                    <td>string?</td>
                    <td>null</td>
                    <td>Gap between rows (overrides Gap)</td>
                </tr>
                <tr>
                    <td><code>ColumnGap</code></td>
                    <td>string?</td>
                    <td>null</td>
                    <td>Gap between columns (overrides Gap)</td>
                </tr>
                <tr>
                    <td><code>AutoFit</code></td>
                    <td>bool</td>
                    <td>false</td>
                    <td>Use auto-fit for responsive columns</td>
                </tr>
                <tr>
                    <td><code>MinColumnWidth</code></td>
                    <td>string</td>
                    <td>"250px"</td>
                    <td>Minimum column width when using AutoFit</td>
                </tr>
                <tr>
                    <td><code>ChildContent</code></td>
                    <td>RenderFragment</td>
                    <td>-</td>
                    <td>Grid items (GridItem components)</td>
                </tr>
            </tbody>
        </table>

        <h4 style="margin-top: 1.5rem;">GridItem Props</h4>
        <table class="api-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Default</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><code>ColSpan</code></td>
                    <td>int</td>
                    <td>1</td>
                    <td>Number of columns this item spans</td>
                </tr>
                <tr>
                    <td><code>RowSpan</code></td>
                    <td>int</td>
                    <td>1</td>
                    <td>Number of rows this item spans</td>
                </tr>
                <tr>
                    <td><code>ChildContent</code></td>
                    <td>RenderFragment</td>
                    <td>-</td>
                    <td>Item content</td>
                </tr>
            </tbody>
        </table>
    </Props>

    <AccessibilityNotes>
        <ul>
            <li>Maintains semantic order for screen readers</li>
            <li>Visual layout doesn't affect navigation order</li>
            <li>Responsive design supports various screen sizes</li>
            <li>No ARIA attributes needed for pure layout</li>
        </ul>
    </AccessibilityNotes>
</ComponentPage>

@code {
    private List<string> relatedComponents = new() { "Stack", "Container", "AspectRatio" };

    private string BasicCode => @"<Grid Columns=""3"" Gap=""1rem"">
    <GridItem>Item 1</GridItem>
    <GridItem>Item 2</GridItem>
    <GridItem>Item 3</GridItem>
    <GridItem>Item 4</GridItem>
    <GridItem>Item 5</GridItem>
    <GridItem>Item 6</GridItem>
</Grid>";

    private string SpansCode => @"<Grid Columns=""12"" Gap=""1rem"">
    <GridItem ColSpan=""12"">Full width header</GridItem>
    <GridItem ColSpan=""8"">Main content (8 columns)</GridItem>
    <GridItem ColSpan=""4"">Sidebar (4 columns)</GridItem>
    <GridItem ColSpan=""6"">Half width</GridItem>
    <GridItem ColSpan=""6"">Half width</GridItem>
</Grid>";

    private string AutoFitCode => @"<Grid AutoFit=""true"" MinColumnWidth=""200px"" Gap=""1rem"">
    <GridItem>Auto-sized 1</GridItem>
    <GridItem>Auto-sized 2</GridItem>
    <GridItem>Auto-sized 3</GridItem>
    <GridItem>Auto-sized 4</GridItem>
    <GridItem>Auto-sized 5</GridItem>
</Grid>";

    private string GapCode => @"<Grid Columns=""3"" RowGap=""2rem"" ColumnGap=""0.5rem"">
    <GridItem>Item 1</GridItem>
    <GridItem>Item 2</GridItem>
    <GridItem>Item 3</GridItem>
    <GridItem>Item 4</GridItem>
    <GridItem>Item 5</GridItem>
    <GridItem>Item 6</GridItem>
</Grid>";
}
