@page "/components/stack"

<PageTitle>Stack - Vibe.UI</PageTitle>

<ComponentPage ComponentName="Stack"
               Category="Layout"
               Description="A layout component for arranging children in a vertical or horizontal stack with consistent spacing."
               RelatedComponents="@relatedComponents">

    <PreviewContent>
        <div class="preview-demo">
            <div style="padding: 1.5rem; background: #fff3cd; border: 1px solid #ffc107; border-radius: 8px; margin-bottom: 1rem;">
                <h4 style="margin: 0 0 0.5rem 0; color: #856404;">Component Not Yet Implemented</h4>
                <p style="margin: 0; color: #856404;">
                    The Stack component has not been implemented yet. The API documentation below represents the planned interface.
                </p>
            </div>
        </div>
    </PreviewContent>

    <Examples>
        <div class="example-item">
            <h3>Vertical Stack</h3>
            <CodeBlock Code="@VerticalCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>Horizontal Stack</h3>
            <CodeBlock Code="@HorizontalCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>Custom Spacing</h3>
            <CodeBlock Code="@SpacingCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>Alignment</h3>
            <CodeBlock Code="@AlignmentCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>Wrap Behavior</h3>
            <CodeBlock Code="@WrapCode" Language="razor" />
        </div>
    </Examples>

    <Props>
        <table class="api-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Default</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><code>Direction</code></td>
                    <td>StackDirection</td>
                    <td>Vertical</td>
                    <td>Stack direction (Vertical, Horizontal)</td>
                </tr>
                <tr>
                    <td><code>Spacing</code></td>
                    <td>string</td>
                    <td>"1rem"</td>
                    <td>Space between items</td>
                </tr>
                <tr>
                    <td><code>Align</code></td>
                    <td>StackAlign</td>
                    <td>Stretch</td>
                    <td>Cross-axis alignment</td>
                </tr>
                <tr>
                    <td><code>Justify</code></td>
                    <td>StackJustify</td>
                    <td>Start</td>
                    <td>Main-axis alignment</td>
                </tr>
                <tr>
                    <td><code>Wrap</code></td>
                    <td>bool</td>
                    <td>false</td>
                    <td>Whether items can wrap</td>
                </tr>
            </tbody>
        </table>
    </Props>

    <AccessibilityNotes>
        <ul>
            <li>Maintains semantic order of content</li>
            <li>No impact on keyboard navigation</li>
            <li>Flexbox-based for responsive layouts</li>
        </ul>
    </AccessibilityNotes>
</ComponentPage>

@code {
    private List<string> relatedComponents = new() { "Grid", "Container", "Flex" };

    private string VerticalCode => @"<Stack Direction=""StackDirection.Vertical"">
    <Card>Item 1</Card>
    <Card>Item 2</Card>
    <Card>Item 3</Card>
</Stack>";

    private string HorizontalCode => @"<Stack Direction=""StackDirection.Horizontal"">
    <Button>Button 1</Button>
    <Button>Button 2</Button>
    <Button>Button 3</Button>
</Stack>";

    private string SpacingCode => @"<Stack Spacing=""0.5rem"">
    <div>Tight spacing</div>
    <div>Tight spacing</div>
</Stack>

<Stack Spacing=""2rem"">
    <div>Wide spacing</div>
    <div>Wide spacing</div>
</Stack>";

    private string AlignmentCode => @"<Stack Direction=""StackDirection.Horizontal""
       Align=""StackAlign.Center""
       Justify=""StackJustify.SpaceBetween"">
    <span>Left</span>
    <span>Center</span>
    <span>Right</span>
</Stack>

<Stack Align=""StackAlign.End"">
    <div style=""width: 200px;"">Right-aligned</div>
    <div style=""width: 150px;"">Right-aligned</div>
</Stack>";

    private string WrapCode => @"<Stack Direction=""StackDirection.Horizontal"" Wrap=""true"">
    <Button>Item 1</Button>
    <Button>Item 2</Button>
    <Button>Item 3</Button>
    <Button>Item 4</Button>
    <Button>Item 5</Button>
    <Button>Item 6</Button>
</Stack>";
}
