@page "/components/badge"
@using Vibe.UI.Components

<PageTitle>Badge - Vibe.UI</PageTitle>

<ComponentPage ComponentName="Badge"
               Category="DataDisplay"
               Description="A small label for displaying counts, statuses, or categories."
               RelatedComponents="@relatedComponents">

    <PreviewContent>
        <div class="preview-demo" style="display: flex; gap: 1rem; align-items: center; flex-wrap: wrap;">
            <Badge Variant="default">Default</Badge>
            <Badge Variant="primary">Primary</Badge>
            <Badge Variant="success">Success</Badge>
            <Badge Variant="warning">Warning</Badge>
            <Badge Variant="danger">Danger</Badge>
            <Badge Size="small">5</Badge>
            <Badge Size="default">12</Badge>
            <Badge Size="large">99+</Badge>
        </div>
    </PreviewContent>

    <Examples>
        <div class="example-item">
            <h3>Basic Usage</h3>
            <CodeBlock Code="@BasicCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>Variants</h3>
            <CodeBlock Code="@VariantsCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>With Content</h3>
            <CodeBlock Code="@ContentCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>Notification Badge</h3>
            <CodeBlock Code="@NotificationCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>Sizes</h3>
            <CodeBlock Code="@SizesCode" Language="razor" />
        </div>
    </Examples>

    <Props>
        <table class="api-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Default</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><code>Variant</code></td>
                    <td>BadgeVariant</td>
                    <td>Default</td>
                    <td>Visual style variant</td>
                </tr>
                <tr>
                    <td><code>Size</code></td>
                    <td>BadgeSize</td>
                    <td>Medium</td>
                    <td>Size of the badge</td>
                </tr>
                <tr>
                    <td><code>Content</code></td>
                    <td>string</td>
                    <td>null</td>
                    <td>Badge content/text</td>
                </tr>
                <tr>
                    <td><code>Count</code></td>
                    <td>int?</td>
                    <td>null</td>
                    <td>Numeric count to display</td>
                </tr>
                <tr>
                    <td><code>MaxCount</code></td>
                    <td>int</td>
                    <td>99</td>
                    <td>Maximum count before showing "+"</td>
                </tr>
                <tr>
                    <td><code>ShowDot</code></td>
                    <td>bool</td>
                    <td>false</td>
                    <td>Show as simple dot indicator</td>
                </tr>
            </tbody>
        </table>
    </Props>

    <AccessibilityNotes>
        <ul>
            <li>Uses semantic HTML with ARIA attributes</li>
            <li>Badge content is screen reader accessible</li>
            <li>Proper contrast ratios for text</li>
            <li>Status badges have descriptive labels</li>
        </ul>
    </AccessibilityNotes>
</ComponentPage>

@code {
    private List<string> relatedComponents = new() { "Tag", "Chip", "Avatar" };

    private string BasicCode => @"<Badge Content=""New"" />
<Badge Content=""5"" />
<Badge Content=""Pro"" />";

    private string VariantsCode => @"<Badge Content=""Default"" Variant=""BadgeVariant.Default"" />
<Badge Content=""Primary"" Variant=""BadgeVariant.Primary"" />
<Badge Content=""Success"" Variant=""BadgeVariant.Success"" />
<Badge Content=""Warning"" Variant=""BadgeVariant.Warning"" />
<Badge Content=""Danger"" Variant=""BadgeVariant.Danger"" />
<Badge Content=""Info"" Variant=""BadgeVariant.Info"" />";

    private string ContentCode => @"<Button>
    Messages
    <Badge Content=""12"" />
</Button>

<Avatar>
    <Badge Content=""99+"" />
</Avatar>";

    private string NotificationCode => @"<Badge Count=""5"" />
<Badge Count=""25"" />
<Badge Count=""100"" MaxCount=""99"" />
<Badge ShowDot=""true"" />";

    private string SizesCode => @"<Badge Content=""Small"" Size=""BadgeSize.Small"" />
<Badge Content=""Medium"" Size=""BadgeSize.Medium"" />
<Badge Content=""Large"" Size=""BadgeSize.Large"" />";
}
