@page "/components/tabs"
@using Vibe.UI.Components

<PageTitle>Tabs - Vibe.UI</PageTitle>

<ComponentPage ComponentName="Tabs"
               Category="Navigation"
               Description="Organizes content into multiple panels where only one is visible at a time."
               RelatedComponents="@relatedComponents">

    <PreviewContent>
        <div class="preview-demo">
            <h4>Basic Tabs</h4>
            <div style="padding: 1rem; background: var(--surface-1, #f8f9fa); border-radius: 8px;">
                <p style="margin-bottom: 1rem; font-size: 0.875rem; color: #666;">
                    Note: Tabs component implementation is in progress. The API shown in examples below demonstrates the intended usage.
                </p>
                <div style="border: 1px dashed #ddd; padding: 2rem; text-align: center; border-radius: 4px;">
                    <p style="margin: 0; color: #999;">Live preview will be available when Tabs component API is finalized</p>
                </div>
            </div>

            <h4 style="margin-top: 1.5rem;">Expected Behavior</h4>
            <div style="padding: 1rem; background: var(--surface-1, #f8f9fa); border-radius: 8px;">
                <ul style="margin: 0; padding-left: 1.5rem;">
                    <li>Click tab buttons to switch between content panels</li>
                    <li>Only one panel visible at a time</li>
                    <li>Active tab is highlighted</li>
                    <li>Keyboard navigation with Arrow keys</li>
                    <li>Disabled tabs cannot be activated</li>
                </ul>
            </div>
        </div>
    </PreviewContent>

    <Examples>
        <div class="example-item">
            <h3>Basic Usage</h3>
            <CodeBlock Code="@BasicCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>Vertical Tabs</h3>
            <CodeBlock Code="@VerticalCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>With Icons</h3>
            <CodeBlock Code="@IconsCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>Disabled Tab</h3>
            <CodeBlock Code="@DisabledCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>Controlled Tabs</h3>
            <CodeBlock Code="@ControlledCode" Language="razor" />
        </div>
    </Examples>

    <Props>
        <table class="api-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Default</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><code>ActiveTab</code></td>
                    <td>string</td>
                    <td>null</td>
                    <td>Currently active tab key</td>
                </tr>
                <tr>
                    <td><code>DefaultTab</code></td>
                    <td>string</td>
                    <td>null</td>
                    <td>Default active tab key</td>
                </tr>
                <tr>
                    <td><code>Orientation</code></td>
                    <td>Orientation</td>
                    <td>Horizontal</td>
                    <td>Tab orientation</td>
                </tr>
                <tr>
                    <td><code>Variant</code></td>
                    <td>TabsVariant</td>
                    <td>Underline</td>
                    <td>Visual style (Underline, Enclosed, Pills)</td>
                </tr>
                <tr>
                    <td><code>ChildContent</code></td>
                    <td>RenderFragment</td>
                    <td>-</td>
                    <td>Tab panels content</td>
                </tr>
            </tbody>
        </table>
    </Props>

    <Events>
        <table class="api-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><code>ActiveTabChanged</code></td>
                    <td>EventCallback&lt;string&gt;</td>
                    <td>Callback when active tab changes</td>
                </tr>
            </tbody>
        </table>
    </Events>

    <AccessibilityNotes>
        <ul>
            <li>ARIA role="tablist", "tab", and "tabpanel"</li>
            <li>Keyboard navigation (Arrow keys, Home, End)</li>
            <li>aria-selected for current tab</li>
            <li>Focus management between tabs</li>
            <li>Hidden panels use aria-hidden</li>
        </ul>
    </AccessibilityNotes>
</ComponentPage>

