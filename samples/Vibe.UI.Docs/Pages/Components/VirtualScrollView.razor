@page "/components/virtualscroll"
@using Vibe.UI.Components

<PageTitle>VirtualScroll - Vibe.UI</PageTitle>

<ComponentPage ComponentName="VirtualScroll"
               Category="Advanced"
               Description="A virtual scrolling component that efficiently renders large lists by only displaying visible items in the viewport."
               RelatedComponents="@relatedComponents">

    <PreviewContent>
        <div class="preview-demo">
            <VirtualScroll Items="scrollItems" ItemHeight="60" Height="300">
                <ItemTemplate Context="item">
                    <div style="padding: 1rem; border-bottom: 1px solid #eee;">
                        <strong>@item</strong>
                    </div>
                </ItemTemplate>
            </VirtualScroll>
        </div>
    </PreviewContent>

    <Examples>
        <div class="example-item">
            <h3>Basic Virtual Scroll</h3>
            <CodeBlock Code="@BasicCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>Variable Item Heights</h3>
            <CodeBlock Code="@VariableHeightCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>Infinite Scroll</h3>
            <CodeBlock Code="@InfiniteScrollCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>Horizontal Scroll</h3>
            <CodeBlock Code="@HorizontalCode" Language="razor" />
        </div>

        <div class="example-item">
            <h3>With Loading State</h3>
            <CodeBlock Code="@LoadingCode" Language="razor" />
        </div>
    </Examples>

    <Props>
        <table class="api-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Default</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><code>Items</code></td>
                    <td>IEnumerable&lt;TItem&gt;</td>
                    <td>-</td>
                    <td>Collection of items to display</td>
                </tr>
                <tr>
                    <td><code>ItemTemplate</code></td>
                    <td>RenderFragment&lt;TItem&gt;</td>
                    <td>-</td>
                    <td>Template for rendering each item</td>
                </tr>
                <tr>
                    <td><code>ItemHeight</code></td>
                    <td>int</td>
                    <td>50</td>
                    <td>Fixed height per item in pixels</td>
                </tr>
                <tr>
                    <td><code>Height</code></td>
                    <td>string</td>
                    <td>"400px"</td>
                    <td>Container height (CSS value)</td>
                </tr>
                <tr>
                    <td><code>OverscanCount</code></td>
                    <td>int</td>
                    <td>3</td>
                    <td>Number of items to render outside viewport</td>
                </tr>
                <tr>
                    <td><code>Horizontal</code></td>
                    <td>bool</td>
                    <td>false</td>
                    <td>Enable horizontal scrolling mode</td>
                </tr>
                <tr>
                    <td><code>LoadingTemplate</code></td>
                    <td>RenderFragment</td>
                    <td>-</td>
                    <td>Template shown when loading more items</td>
                </tr>
            </tbody>
        </table>
    </Props>

    <Events>
        <table class="api-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><code>OnScrollEnd</code></td>
                    <td>EventCallback</td>
                    <td>Callback when scrolled to the end</td>
                </tr>
                <tr>
                    <td><code>OnScroll</code></td>
                    <td>EventCallback&lt;ScrollEventArgs&gt;</td>
                    <td>Callback on scroll events</td>
                </tr>
                <tr>
                    <td><code>OnItemClick</code></td>
                    <td>EventCallback&lt;TItem&gt;</td>
                    <td>Callback when item is clicked</td>
                </tr>
            </tbody>
        </table>
    </Events>

    <AccessibilityNotes>
        <ul>
            <li>Maintains focus position during virtual scrolling</li>
            <li>Keyboard scrolling (Arrow keys, Page Up/Down)</li>
            <li>Screen readers announce list size and position</li>
            <li>Uses <code>role="list"</code> and <code>role="listitem"</code></li>
            <li>Proper <code>aria-setsize</code> and <code>aria-posinset</code> attributes</li>
            <li>Focus restoration when items are recycled</li>
        </ul>
    </AccessibilityNotes>
</ComponentPage>

