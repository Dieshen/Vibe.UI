    private string InfiniteScrollCode => @"<VirtualScroll Items=""@items""
               ItemHeight=""80""
               Height=""500px""
               OnScrollEnd=""@LoadMoreAsync"">
    <ItemTemplate Context=""item"">
        <div class=""list-item"">@item.Name</div>
    </ItemTemplate>
    <LoadingTemplate>
        <div class=""loading-more"">
            <Spinner Size=""SpinnerSize.Small"" />
            <span>Loading more items...</span>
        </div>
    </LoadingTemplate>
</VirtualScroll>

@code {
    private List<Item> items = new();
    private int page = 1;
    private bool isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadMoreAsync();
    }

    private async Task LoadMoreAsync()
    {
        if (isLoading) return;

        isLoading = true;
        var newItems = await FetchItemsAsync(page++);
        items.AddRange(newItems);
        isLoading = false;

        StateHasChanged();
    }

    private async Task<List<Item>> FetchItemsAsync(int pageNumber)
    {
        // Simulate API call
        await Task.Delay(1000);
        return Enumerable.Range((pageNumber - 1) * 50 + 1, 50)
            .Select(i => new Item { Name = $""Item {i}"" })
            .ToList();
    }
}";

    private string HorizontalCode => @"<VirtualScroll Items=""@images""
               ItemHeight=""200""
               Height=""300px""
               Horizontal=""true"">
    <ItemTemplate Context=""image"">
        <div class=""image-card"">
            <img src=""@image.Url"" alt=""@image.Title"" />
            <p>@image.Title</p>
        </div>
    </ItemTemplate>
</VirtualScroll>

@code {
    private List<ImageItem> images = GetImages();
}";

    private string LoadingCode => @"<VirtualScroll Items=""@items""
               ItemHeight=""70""
               Height=""500px""
               OnScrollEnd=""@LoadMoreDataAsync"">
    <ItemTemplate Context=""item"">
        <div class=""data-row"">
            <span>@item.Id</span>
            <span>@item.Name</span>
            <span>@item.Status</span>
        </div>
    </ItemTemplate>
    <LoadingTemplate>
        <div class=""loading-indicator"">
            <Skeleton Width=""100%"" Height=""70px"" Count=""3"" />
        </div>
    </LoadingTemplate>
</VirtualScroll>

@code {
    private List<DataRow> items = new();
    private bool hasMore = true;

    private async Task LoadMoreDataAsync()
    {
        if (!hasMore) return;

        var newData = await DataService.GetNextPageAsync();
        if (newData.Any())
        {
            items.AddRange(newData);
        }
        else
        {
            hasMore = false;
        }
    }
}";
}
